@model OnlineAuction.Buisness.Models.Item.CreateLotModel
@{
    ViewBag.Title = "CreateLot";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<h2>CreateLot</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Account creation was unsuccessful. Please correct the errors and try again.")
    <div>
        <div class="lot-container-create">
            <table>
                <tr>
                    <td>Name:</td>
                    <td>@Html.TextBoxFor(t => t.Name)
                        @Html.ValidationMessageFor(t => t.Name)</td>
                </tr>
                <tr>
                    <td>Description:</td>
                    <td> @Html.TextAreaFor(t => t.Description)
                        @Html.ValidationMessageFor(t => t.Description)</td>
                </tr>
                <tr>
                    <td>ActualDate:</td>
                    <td>@Html.TextBoxFor(t => t.ActualDate)
                        @Html.ValidationMessageFor(t => t.ActualDate)</td>
                </tr>
                <tr>
                    <td>Minimal currency:</td>
                    <td>@Html.TextBoxFor(t => t.Currency)
                        @Html.ValidationMessageFor(t => t.Currency)</td>
                    
                </tr>
            </table>
       
        
            <button type="submit"  value="Create Lot" >Save</button>
        </div>
    </div>
}